<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/workspace"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="right"
            android:inputType="none"
            android:textColor="#888585"
            android:textDirection="ltr"
            android:textSize="50dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/delone"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="280dp"
            android:background="@drawable/backspace"
            android:onClick="onButClick"
            tools:ignore="SpeakableTextPresentCheck" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/clear"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#003B73"
                    android:onClick="onButClick"
                    android:text="C"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/lpar"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#0074B7"
                    android:onClick="onButClick"
                    android:text="("
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="60sp"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/rpar"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#0074B7"
                    android:onClick="onButClick"
                    android:text=")"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="60sp"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/plus"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#0074B7"
                    android:onClick="onButClick"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="60sp"
                    tools:ignore="TextContrastCheck" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/seven"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:layout_marginRight="1.2dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:padding="10dp"
                    android:text="7"
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/eight"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:padding="10dp"
                    android:text="8"
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/nine"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:padding="10dp"
                    android:text="9"
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/sub"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#0074B7"
                    android:onClick="onButClick"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="60dp"
                    tools:ignore="TextContrastCheck" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/four"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:padding="10dp"
                    android:text="4"
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/five"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:padding="10dp"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/six"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:padding="10dp"
                    android:text="6"
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/mul"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#0074B7"
                    android:onClick="onButClick"
                    android:text="*"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="60dp"
                    tools:ignore="TextContrastCheck" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:padding="10dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/two"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:padding="10dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/three"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:padding="10dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/div"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#0074B7"
                    android:onClick="onButClick"
                    android:text="/"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="60dp"
                    tools:ignore="TextContrastCheck" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/zer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:padding="10dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/twozeroes"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:padding="10dp"
                    android:text="00"
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/point"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#DEEDFB"
                    android:onClick="onButClick"
                    android:text="."
                    android:textAlignment="center"
                    android:textColor="#888585"
                    android:textSize="60sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/equalto"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_margin="0.5dp"
                    android:background="#929BA3"
                    android:onClick="evalute"
                    android:text="="
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="60dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>